@namespace PlannerApp.Components

<MudPaper Class="py-1 px-2 mb-1">
    <div class="d-flex">
        <MudTextField @bind-Value="_query" Variant="Variant.Outlined" />
        <MudIconButton Color="Color.Primary" Icon="@Icons.Material.Filled.Search" 
            OnClick="async () => await GetPlansAsync()"/>
    </div>
</MudPaper>

<MudDivider Class="my-4"/>

@(_isBusy){
<MudGrid Spacing="2">
    @for (int i = 1; i <= 8; i++)
    {
        <MudItem sm="12" md="4" lg="3">
            <PlanCard IsBusy=true />
        </MudItem>
    }
</MudGrid>
}
else{
<MudGrid Spacing="2">
    @if (_planSummaries != null && _planSummaries.Records != null)
    {
        foreach (var plan in _planSummaries.Records)
        {
            <MudItem sm="12" md="4" lg="3">
                <PlanCard PlanSummary="plan" />
            </MudItem>
        }
    }
</MudGrid>
}

<div class="d-flex justify-center py-2 px-1 mt-6">
    @for(int i =1; i <= _planSummaries!.TotalPages; i++)
    {
        int index = i;
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mr-1" 
           Disabled="@(_pageNumber == index)" OnClick="async () => await GetPlansAsync(index)">@index</MudButton>
    }
</div>
