@model IEnumerable<ToDoList.Models.ToDoListModel>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create New To Do Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Content
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Content)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
