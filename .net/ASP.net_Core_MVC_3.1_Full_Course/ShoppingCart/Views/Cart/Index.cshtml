@model CartViewModel

@{
    ViewData["Title"] = "Cart Overview";
}


@if (Model.CartItem.Count > 0)
{
    <h1>Cart Overview</h1>
    <div class="cartWrapper">
        <div class="cartbg  d-none">
            <h3 class="text-center">Redirecting you to paypal...</h3>
            <img src="~/images/ajax-loader.gif" />
        </div>
        <table class="table">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th></th>
                <th>Price</th>
                <th>Total</th>
            </tr>
            @foreach (var item in Model.CartItem)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="Add" class="btn btn-sm btn-primary" asp-route-id="@item.ProductId">+</a>
                        <a asp-action="Decrease" class="btn btn-sm btn-success" asp-route-id="@item.ProductId">-</a>
                        <a asp-action="Remove" class="btn btn-sm btn-danger" asp-route-id="@item.ProductId">Remove</a>
                    </td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>@Model.CartItem.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quantity * x.Price).ToString("C2")</td>
                </tr>
            }
            <tr>
                <td class="text-right" colspan="4">Grand Total: @Model.GrandTotal.ToString("C2")</td>
            </tr>
            <tr>
                <td class="text-right" colspan="4">
                    <a asp-action="Clear" class="btn btn-danger">Clear Cart</a>
                    <a href="#" class="btn btn-primary checkout">Checkout</a>
                </td>
            </tr>
        </table>
    </div>
}
else
{
    <h3 class="display-4 text-center">Your cart is empty.</h3>
}

<partial name="~/Views/Cart/_PaypalPartial.cshtml" for="CartItem" />

@section Scripts{
    <script>
        $(function () {
            $("a.checkout").click(function (e) {
                e.preventDefault();
                $("div.cartbg").removeClass("d-none");

                $.get("/cart/clear", {}, function () {
                    $("form.paypalform").submit();
                });

            });
        });
    </script>
}
