@* To handle multiple handlers? *@
@page
@model Core.Pages.HandlerSelectorModel

<div class="bg-primary text-white text-center">
    Handler Selector
</div>

<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <th>Name</th>
            <td>@Model.product?.Name</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.product?.Price</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>@Model.product.Category?.Name</td>
        </tr>
    </tbody>
</table>

 @* Request redirected to OnGetAsync *@
<a href="/handlerselector" class="btn btn-primary">Standard</a>
 @* Request redirected to OnGetCategoryAsync *@
<a href="/handlerselector?handler=category" class="btn btn-primary">Category</a>