@page "{id:long?}"
@model Core.Pages.EditModel

<div class="bg-primary text-white p-2 m-2">
    Edit Product
</div>

<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <th>Name</th>
            <td>@Model.product.Name</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.product.Price</td>
        </tr>
    </tbody>
</table>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Price</label>
        <input type="text" name="price" class="form-control" value="@Model.product.Price"/>
    </div>
    <button class="btn btn-primary mt-2">
        Submit
    </button>
</form>