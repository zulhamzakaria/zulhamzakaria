@model List<IdentityUser>
<br />
<h1>Admin Area</h1>

<a asp-action="Create">Add New User</a>
<hr/>

<table class="table table-bordered">
    <tr class="bg-primary text-center text-white">
        <td>Id</td>
        <td>UserName</td>
        <td>Email</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>

    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4" class="text-center text-white">No User Accounts</td>
        </tr>
    }
    else
    {
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn  btn-danger">Delete</a>
                </td>
            </tr>
        }
    }
</table>
