@model IEnumerable<IdentityRole>
<br />
<h1>Roles Area</h1>

<a asp-action="Create">Add New role</a>
<hr/>

<table class="table table-bordered">
    <tr class="bg-primary text-center text-white">
        <td>Id</td>
        <td>Name</td>
        <td>Members</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center text-white">No User Roles</td>
        </tr>
    }
    else
    {
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>members</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn  btn-danger">Delete</a>
                </td>
            </tr>
        }
    }
</table>
