@model Product

@{
    ViewBag.Title = "Form";
}

<h2 class="bg-primary text-white text-center p-2">
    Form
</h2>

@*<form action="/form/submitform" method="post">*@
@*@Html.AntiForgeryToken()*@
@*
    Using asp-action automatically calls AntiForgeryToken.
    Need to enable app.UseAuthorization() first
*@
<form asp-action="submitform" method="post" id="htmlform">
    <div class="form-group">
        <label>Id</label>
        @*<input name="Name" value="@Model.Name" class="form-control"/>*@
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Name</label>
        @*<input name="Name" value="@Model.Name" class="form-control"/>*@
        <input asp-for="Name" value="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" value="@Model.Price" class="form-control" />
    </div>

    <div class="form-group">
        <label>Category</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
        </select>
    </div>

    <button class="btn btn-primary mt-2">Submit</button>


</form>

@* This button responds to the form with id htmlform *@
<button class="btn btn-primary mt-2" form="htmlform" asp-action="submitform">Submit Form</button>