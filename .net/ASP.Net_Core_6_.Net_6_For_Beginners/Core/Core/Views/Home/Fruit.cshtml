@*View is resolved at run time so non existant element will throw error during runtime
    To remedy this, use strngly-typed by using @model
    Also enables intellisense*@
@model Product

<!DOCTYPE html>
<html lang="en-gb">
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <div class="row m-2">
            <h2 class="text-white bg-info p-2">Product</h2>

            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <td>Category Id</td>
                    </tr>
                    <tr>
                        <td>@Model.Name</td>
                        <td>@Model.Price.ToString("c")</td>
                        <td>@Model.CategoryId</td>
                    </tr>
                    @*Use @ to access c# code*@
                    @if (@Model.CategoryId == 1)
                    {
                        <tr>
                            <td>Category</td>
                            <td>Fruits</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>Category</td>
                            <td>Shirts</td>
                        </tr>
                    }
                    <tr>
                        <th>Fruit type</th>
                        <td>
                            @switch (Model.Name)
                            {
                                case "Apples":
                                    @:It's apples!
                                    break;
                                default:
                                    @Model.Name
                                    break;
                            }
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</body>
</html>

