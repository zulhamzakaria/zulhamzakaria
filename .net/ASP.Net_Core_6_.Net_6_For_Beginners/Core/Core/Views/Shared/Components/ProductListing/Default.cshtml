@model IEnumerable<Product>

<div class="col-12 m-2">
    <h2 class="text-white bg-info p-2">All Products</h2>

    @* Get viewbag from ViewComponent.cs *@
    <table class="table table-striped table-bordered bg-@ViewBag.Class">

        @* From TableHeadTagHelpers.cs *@
        <tablehead bg-color="dark">Product Summary</tablehead>

        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @*Use ienumerable to allow the iteration*@
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Name</td>
                    <td class="text-right">@item.Price</td>
                    <td class="text-right">@item.Category?.Name</td>
                </tr>
            }
        </tbody>
    </table>

</div>

<table>
    <tr>
        <th>Fruits</th>
    </tr>
    <tr>
        <td>Apples</td>
    </tr>
</table>

@* ContentWrapperTahHelper.cs *@
<div wrap=true wrapper-string="Wrapper Content" >
    @* Inner content sandwiched between elems defined inside ContentWrapperTagHelper.cs *@
    Inner Content
</div>
