@model ProductViewModel

@{
    ViewData["Title"] = "Product Editor";
}

<a asp-action="Index">Back to List</a>

<h1>Produt Editor</h1>

<h5 class="bg-@Model.Theme text-white text-center p-2">@Model.Action</h5>

<form asp-action="@Model.Action" method="post">

    <div asp-validation-summary="All" class="text-danger">

    </div>

    <div class="form-group">
        <label>Id</label>
        <input class="form-control" asp-for="Product.Id" readonly />
    </div>
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="Product.Name" readonly="@Model.ReadOnly" />
        <span class="text-danger" asp-validation-for="Product.Name" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input class="form-control" asp-for="Product.Price" readonly="@Model.ReadOnly" />
        <span class="text-danger" asp-validation-for="Product.Price" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <select class="form-control" 
            asp-for="Product.CategoryId" disabled="@Model.ReadOnly" 
            asp-items="@(new SelectList(Model.Categories,"Id","Name"))">
            <option value="" disabled selected>Choose category</option>
        </select>
        <span class="text-danger d-block" asp-validation-for="Product.CategoryId" />
    </div>

    @if(Model.ShowAction == true)
    {
        <button class="btn btn-@Model.Theme mt-2">@Model.Action</button>
    }

</form>