@model IEnumerable<ProductDTO>

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class=col>
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-primary">Create New Product</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @item.Price.ToString("C")
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-success" asp-route-productId="@item.ProductId">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-productId="@item.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>